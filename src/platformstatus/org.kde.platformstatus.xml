<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.PlatformStatus">
    <property name="shellPackage" type="s" access="read"/>
    <property name="runtimePlatform" type="as" access="read"/>
    <signal name="platformAboutToChange">
      <arg name="platform" type="s" direction="out"/>
      <arg name="changeId" type="i" direction="out"/>
    </signal>
    <signal name="platformChanged">
      <arg name="platform" type="s" direction="out"/>
      <arg name="changeId" type="i" direction="out"/>
    </signal>
    <signal name="shellPackageChanged">
      <arg name="package" type="s" direction="out"/>
    </signal>
    <signal name="runtimePlatformChanged">
      <arg name="runtimePlatform" type="as" direction="out"/>
    </signal>
    <method name="registerClient">
      <arg name="dbus" type="s" direction="in"/>
    </method>
    <method name="clientChangeStarted">
      <arg name="dbus" type="s" direction="in"/>
      <arg name="changeId" type="i" direction="in"/>
      <arg name="maximumTime" type="i" direction="in"/>
    </method>
    <method name="clientChangeFinished">
      <arg name="dbus" type="s" direction="in"/>
      <arg name="changeId" type="i" direction="in"/>
    </method>
    <method name="startPlatformChange">
      <arg name="dbus" type="s" direction="in"/>
      <arg name="platform" type="s" direction="in"/>
    </method>
    <method name="shellPackage">
      <arg type="s" direction="out"/>
    </method>
    <method name="runtimePlatform">
      <arg type="as" direction="out"/>
    </method>
  </interface>
</node>
